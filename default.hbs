<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{{meta_title}}</title>
  <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />

	{{ghost_head}}
</head>

<body>
  <header id="gh-head" class="gh-head">
    <nav class=" bg-white w-full flex relative justify-between items-center mx-auto px-8 h-20">
      <!-- logo -->
      <div class="inline-flex">
        <a class="text-gray-800 mx-1.5 sm:mx-6 font-bold" href="/">
          {{#if @site.logo}}
          <div class="md:block">
            <img src="{{@site.logo}}" alt="{{@site.title}}" />
          </div>
          {{else}}
          <div class="block">
            {{@site.title}}
          </div>
          {{/if}}          
        </a>
      </div>
      <!-- end logo -->
      <!-- links -->
      <div class="flex-initial">
        <div class="flex justify-end items-center relative">
          <div class="flex mr-4 items-center">
            {{#if @site.navigation}}
                {{navigation}}
            {{/if}}
            <div class="block relative">
              {{#if @site.facebook}}
              <a class="inline-block py-2 px-3 hover:bg-gray-200 rounded-full relative" href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">
                <div class="w-6 h-6 rounded-full flex items-center h-5" alt="" width="384" height="512">
                  {{> "icons/facebook"}}
                </div>
              </a>
              {{/if}}
              {{#if @site.twitter}}
              <a class="inline-block py-2 px-3 hover:bg-gray-200 rounded-full relative" href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">
                <div class="w-6 h-6 rounded-full flex items-center h-5" alt="" width="384" height="512">
                  {{> "icons/twitter"}}
                </div>
              </a>
              {{/if}}
              <a class="inline-block py-2 px-3 hover:bg-gray-200 rounded-full relative" href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener">
                <div class="w-6 h-6 rounded-full flex items-center h-5" alt="" width="384" height="512">
                  {{> "icons/rss"}}
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
      <!-- end links -->
    </nav>
  </header>
  <div class="container mx-auto">
    <div class="max-w-6xl mx-auto md:px-6 px-4">
      <div class="md:py-20 py-12">
        <div class="md:pb-20 pb-12 max-w-3xl mx-auto text-center">
          {{{body}}}
        </div>
      </div>
    </div>
  </div>

	{{ghost_foot}}
</body>

</html>